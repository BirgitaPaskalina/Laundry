<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="165dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="15dp"
    android:id="@+id/Card_PILIHPELANGGAN"
    android:layout_gravity="center_horizontal">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/IDPelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[Urutan]"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:background="@color/material_dynamic_neutral95"/>

    <View
        android:id="@+id/garis"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_gravity="end"
        app:layout_constraintTop_toBottomOf="@+id/IDPelanggan"/>

    <TextView
        android:id="@+id/namaPelanggan_PILIHPELANGGAN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama :"
        android:textStyle="bold"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/garis"/>

    <TextView
        android:id="@+id/alamatPelanggan_PILIHPELANGGAN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat :"
        android:textStyle="normal"
        android:textSize="18dp"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namaPelanggan_PILIHPELANGGAN"/>

    <TextView
        android:id="@+id/noPelanggan_PILIHPELANGGAN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="no Hp :"
        android:textStyle="normal"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/alamatPelanggan_PILIHPELANGGAN"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
